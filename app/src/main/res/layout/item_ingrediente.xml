<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_mis_ingrediente"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_item_nomb_ing"
                android:textColor="#000"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/lbl_item_nomb_ingrediente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_item_cant_ing"
                android:textColor="#000"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbl_item_cant_ingrediente"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/lbl_item_idunidadmedida_ingrediente"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/lbl_item_nombreunidadmedida_ingrediente"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                   />
            </LinearLayout>

        </LinearLayout>





    </LinearLayout>
</androidx.cardview.widget.CardView>